{
    "manifest_version": 3,
    "name": "User Action Monitor",
    "version": "3.0",
    "description": "Monitor user interactions on web pages.",
    "permissions": ["activeTab", "storage", "scripting"],    
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png"
    }
  }
  